<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Magang Ngebut Enak dan Tenang</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap icons-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container px-4 px-lg-5">
        <a class="navbar-brand">MAGNET</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4"></ul>
          <div class="d-flex">
            <a class="btn btn-outline-dark" href="/logout">
              <i class="bi bi-person me-1"></i>
              Log Out
            </a>
          </div>
        </div>
      </div>
    </nav>
    <!-- Product section-->
    <div class="container">
      <div class="row">
        <% for(var i = 0; i < data.length; i++){ %>
        <div class="col-lg-4">
          <form
            action="/update/<%= data[i].perguruan_tinggi %>"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="container">
              <div class="row">
                <div class="pt-4">
                  <div class="card profile-card text-center">
                    <i class="bi bi-person-circle" style="font-size: 400%"></i>
                    <div class="card-body">
                      <h5 class="card-title"><%= data[i].nama_lengkap %></h5>
                      <p class="card-text"><%= data[i].perguruan_tinggi %></p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
            <div class="container">
              <div class="row">
                <div class="pt-3">
                  <div class="card profile-card">
                    <div class="card-body">
                      <h5 class="card-title">Data Pribadi</h5>
                      <p class="card-text d-flex align-items-center">
                        NIK :
                        <input
                          class="form-control ms-2"
                          type="text"
                          value="<%= data[i].nik %>"
                          style="width: auto"
                          disabled
                        />
                      </p>
                      <p class="card-text d-flex align-items-center">
                        Nama Lengkap :
                        <input
                          class="form-control ms-2"
                          type="text"
                          value="<%= data[i].nama_lengkap %>"
                          style="width: auto"
                          name="nama_lengkap"
                          id="nama_lengkap"
                          disabled
                        />
                      </p>
                      <p class="card-text d-flex align-items-center">
                        Perguruan Tinggi :
                        <input
                          class="form-control ms-2"
                          type="text"
                          value="<%= data[i].perguruan_tinggi %>"
                          style="width: auto"
                          name="perguruan_tinggi"
                          id="perguruan_tinggi"
                          disabled
                        />
                      </p>
                      <p class="card-text d-flex align-items-center">
                        Prodi :
                        <input
                          class="form-control ms-2"
                          type="text"
                          value="<%= data[i].prodi %>"
                          style="width: auto"
                          name="prodi"
                          id="prodi"
                          disabled
                        />
                      </p>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
        <div class="col-lg-8">
          <form
            action="/berkas/store"
            method="post"
            enctype="multipart/form-data"
          >
            <div class="container">
              <div class="row">
                <div class="col-md-10 pt-4">
                  <div class="card profile-card text-center">
                    <div class="card-body">
                      <h4 class="card-title">Document</h4>
                      <p>
                        Lengkapi dokumen untuk mempermudah proses pendaftaraan
                        magang.
                      </p>
                      <div class="mb-3" hidden>
                        <label class="form-label text-start w-100">nik :</label>
                        <input
                          class="form-control"
                          type="text"
                          id="nik"
                          value="<%= data[i].nik %>"
                          name="nik"
                          hidden
                        />
                      </div>
                      <div class="mb-3">
                        <label
                          for="formFile"
                          class="form-label text-start w-100"
                          >KTP :</label
                        >
                        <input
                          class="form-control"
                          type="file"
                          id="formFile"
                          name="foto_ktp"
                        />
                      </div>
                      <div class="mb-3">
                        <label
                          for="formFile"
                          class="form-label text-start w-100"
                          >CV :</label
                        >
                        <input
                          class="form-control"
                          type="file"
                          id="formFile"
                          name="cv"
                        />
                      </div>
                      <div class="mb-3">
                        <label
                          for="formFile"
                          class="form-label text-start w-100"
                          >SK PRESTASI :</label
                        >
                        <input
                          class="form-control"
                          type="file"
                          id="formFile"
                          name="sertifikat_prestasi"
                        />
                      </div>
                      <button type="submit" class="btn btn-secondary">
                        Submit
                      </button>
                      <a href="/mhs" class="btn btn-secondary"> Cancel </a>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </form>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Bootstrap core JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
