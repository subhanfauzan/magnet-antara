<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Magang Ngebut Enak dan Tenang</title>
    <!-- Favicon-->
    <link rel="icon" type="image/x-icon" href="assets/favicon.ico" />
    <!-- Bootstrap CSS -->
    <link
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Bootstrap icons-->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <!-- Core theme CSS (includes Bootstrap)-->
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <!-- Navigation-->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
      <div class="container px-4 px-lg-5">
        <a class="navbar-brand">MAGNET</a>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-lg-4"></ul>
          <form class="d-flex">
            <a class="btn btn-outline-dark" href="/logout">
              <i class="bi bi-person me-1"></i>
              Logout
            </a>
          </form>
        </div>
      </div>
    </nav>
    <!-- Product section-->
    <div class="container pt-4 px-4">
      <div class="row">
        <% for(var i = 0; i < data.length; i++){ %>
        <div class="col-md-3 mb-4 pt-5">
          <!-- 3 out of 12 columns -->
          <div class="card h-100">
            <!-- Ensures the card height is 100% of the column -->
            <div class="card-body">
              <h5 class="card-title mb-3"><%= data[i].nama_perusahaan %></h5>
              <h6 class="card-subtitle mb-2 text-muted">
                <%= data[i].kabupaten %>
              </h6>
              <p class="card-text mb-3">
                <i class="bi bi-geo-alt-fill"></i> <%= data[i].alamat %>
              </p>
              <p class="card-text mb-3"><%= data[i].kriteria_magang %></p>
              <p class="card-text mb-3"><%= data[i].durasi_magang %></p>
              <form action="/detail/store" method="post">
                <input
                  type="hidden"
                  name="id_perusahaan"
                  value="<%= data[i].id_perusahaan %>"
                />
                <button type="submit" class="btn btn-primary">Daftar</button>
              </form>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>

    <!-- Bootstrap core JS and dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
  </body>
</html>
